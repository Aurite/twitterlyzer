<h1>Editing person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_field :bio %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :picture %><br />
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.label :acc_created_at %><br />
    <%= f.date_select :acc_created_at %>
  </p>
  <p>
    <%= f.label :time_offset %><br />
    <%= f.text_field :time_offset %>
  </p>
  <p>
    <%= f.label :friends %><br />
    <%= f.text_area :friends %>
  </p>
  <p>
    <%= f.label :followers %><br />
    <%= f.text_area :followers %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @person %> |
<%= link_to 'Back', project_people_path(@person.project_id) %>