<table>  
  <tr>
    <th>Picture</th>
    <th>Name</th>    
    <th>Username</th>
    <th>Twitter ID</th>
    <th>Bio</th>
    <th>Location</th>    
    <th>Acc created at</th>
    <th>Time offset</th>
    <th>Friends</th>
    <th>Followers</th>
    <th>Feeds</th>
    <th>Actions</th>
  </tr>
 <tr>
   <% @persons.each do |person| %>
    <td><%=link_to(image_tag(person.picture, :size => "50x50"),"http://www.twitter.com/" + person.username)  %></td>
    <td><%= link_to(person.name, project_person_path(@project,person))%></td>
    <td><%=h person.username %></td>
    <td><%=h person.twitter_id %></td>
    <td><%=h person.bio %></td>    
    <td><%=h person.location %></td>    
    <td><%=h person.acc_created_at %></td>
    <td><%=h person.time_offset %></td>
    <td><%=h person.friends_count %></td>
    <td><%=h person.followers_count %></td>    
    <td><%=h person.statuses_count %></td>
    <td>
    <%= link_to 'Destroy', project_person_path(@project,person), :confirm => 'Are you sure?', :method => :delete  %>
    </td>
    <td id="spinner" style="display:none;">
        <%= image_tag "ajax-loader.gif" %>
    </td>
  </tr>
   <% end %>
</table>