<div id="left">
  <h2>Actions </h2>
  <div class="box">  
    <%= link_to 'Add new people', new_project_person_path %>    
    <br>
      <%= link_to_remote "Update all People",
        :url => {:controller => "projects", :action => "update_all_project_people"},
        :confirm => "This might take a long while are you sure?"
    %>
    <br>
    <%= link_to 'Show all people', show_all_project_people_path %>
    <br>
    <%= link_to 'Back', projects_path %>
  </div>
</div>

